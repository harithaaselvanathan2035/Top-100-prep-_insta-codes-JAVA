package arrays;
//merge dorted arrays
import java.util.Arrays;

public class array4 {

	public static void main(String[] args) {
		int[] a = {1,3,6};
		int[] b = {4,7,2};
		int[] c = new int[a.length + b.length];
		
		for(int i =0; i<a.length; i++) {
			c[i]= a[i];
		}
		for(int i =0; i<b.length; i++){
			c[i+a.length] = b[i];
		}
		Arrays.sort(c);
		for(int num:c) {
			System.out.print(num);
		}


}}
